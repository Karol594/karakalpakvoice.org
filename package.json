{
  "name": "qara-voice",
  "version": "1.0.0",
  "description": "QARA Voice - Қарақалпақстанның ғәрезсиз мәлимлеме порталы",
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Karol594/karakalpakvoice.org.git"
  },
  "homepage": "https://karakalpakvoice.org",
  "author": "QARA Voice Editorial Team",
  "license": "MIT",
  "keywords": [
    "karakalpakstan",
    "қарақалпақстан",
    "media",
    "news",
    "culture",
    "hugo",
    "static-site",
    "cms",
    "pwa"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "hugo server --disableFastRender --navigateToChanged --port 1313",
    "build": "hugo --gc --minify",
    "build:preview": "hugo --gc --minify --buildDrafts --buildFuture",
    "clean": "rm -rf public resources",
    "start": "npm run dev",
    "test": "npm run build && npm run test:links",
    "test:links": "htmltest",
    "lighthouse": "lighthouse http://localhost:1313 --output html --output-path ./lighthouse-report.html",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "cms:dev": "npx netlify-cms-proxy-server",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "optimize:images": "imagemin static/images/**/*.{jpg,jpeg,png} --out-dir=static/images/optimized",
    "analyze": "hugo --templateMetrics --templateMetricsHints",
    "security": "npm audit",
    "update": "npm update",
    "precommit": "npm run lint && npm run format",
    "postinstall": "hugo mod get -u"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@netlify/plugin-lighthouse": "^6.0.0",
    "@netlify/plugin-sitemap": "^0.8.1",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "htmltest": "^0.17.0",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "lighthouse": "^11.4.0",
    "netlify-cli": "^17.10.1",
    "netlify-cms-proxy-server": "^1.3.24",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "decap-cms": "^3.1.2",
    "fuse.js": "^7.0.0",
    "lazysizes": "^5.3.2",
    "swiper": "^11.0.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {},
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "html"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run test"
    }
  },
  "imagemin": {
    "plugins": [
      "imagemin-mozjpeg",
      "imagemin-pngquant"
    ],
    "options": {
      "mozjpeg": {
        "quality": 85
      },
      "pngquant": {
        "quality": [0.8, 0.9]
      }
    }
  },
  "netlify": {
    "build": {
      "publish": "public",
      "command": "npm run build"
    },
    "plugins": [
      {
        "package": "@netlify/plugin-sitemap"
      },
      {
        "package": "@netlify/plugin-lighthouse",
        "inputs": {
          "output_path": "reports/lighthouse.html"
        }
      }
    ]
  },
  "lighthouse": {
    "extends": "lighthouse:default",
    "settings": {
      "onlyCategories": [
        "performance",
        "accessibility",
        "best-practices",
        "seo",
        "pwa"
      ]
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://karakalpakvoice.org/support"
  },
  "bugs": {
    "url": "https://github.com/Karol594/karakalpakvoice.org/issues"
  },
  "contributors": [
    {
      "name": "QARA Voice Team",
      "email": "admin@karakalpakvoice.org",
      "url": "https://karakalpakvoice.org/about"
    }
  ],
  "config": {
    "hugo_version": "0.121.1",
    "node_version": "18",
    "npm_version": "9"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
}
